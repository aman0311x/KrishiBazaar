@model List<KrishiBazaar.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

@if (Model == null || !Model.Any())
{
    <p style="color:red;">No products available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Type</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Price</th>
                <th>Farmer ID</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductType</td>
                    <td>@product.ProductName</td>
                    <td>@product.Quantity</td>
                    <td>@product.QuantityUnit</td>
                    <td>@product.Price</td>
                    <td>@product.FarmerId</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img src="@Url.Content("~/images/" + product.ImagePath)" alt="Product Image" width="50" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
