@model KrishiBazaar.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form method="post" asp-action="EditProduct" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" asp-for="ProductName" required />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" required />
    </div>
    <div class="form-group">
        <label>Quantity Unit</label>
        <input type="text" class="form-control" asp-for="QuantityUnit" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" asp-for="Price" required />
    </div>
    <div class="form-group">
        <label>Current Image</label>
        <br />
        <img src="@Url.Content($"~/{Model.ImagePath}")" alt="Product Image" width="150" />
    </div>
    <div class="form-group">
        <label>Upload New Image</label>
        <input type="file" class="form-control" name="Image" />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
