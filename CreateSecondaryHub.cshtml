@model KrishiBazaarProject.Models.SecondaryHub

<h2>Create Secondary Hub</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<form method="post">
    <div class="mb-3">
        <label>Primary Hub</label>
        <select name="PrimaryHubID" class="form-control" required>
            @foreach (var primaryHub in ViewBag.PrimaryHubs)
            {
                <option value="@primaryHub.PrimaryHubID">@primaryHub.Location.District, @primaryHub.Location.Upazila</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Location</label>
        <select name="LocationID" class="form-control" required>
            @foreach (var location in ViewBag.Locations)
            {
                <option value="@location.PostalCode">@location.District, @location.Upazila, @location.Thana</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Capacity</label>
        <input type="number" name="Capacity" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
